<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".Actividades.MainActivity">

    <LinearLayout
        android:id="@+id/panel_inicial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab_asociada"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_terminales_asociadas"
                    style="@style/letra_tabs"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:background="@color/verde_pestanas"
                    android:scrollbars="vertical"
                    android:text="Asociadas"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/selectAsociadas"
                    android:layout_height="4dp"
                    android:orientation="horizontal"
                    android:background="@color/verde_pestanas"
                    >

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_autorizada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_terminales_autorizadas"
                    style="@style/letra_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/verde_pestanas"
                    android:scrollbars="vertical"
                    android:text="Autorizadas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/selectAutorizadas"
                    android:layout_height="4dp"
                    android:orientation="horizontal"
                    android:background="@color/verde_pestanas"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_consultaTerminales_inicial"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>

</FrameLayout>