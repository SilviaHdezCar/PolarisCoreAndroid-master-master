<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/letra_contenido"
            android:text="Bienvenido, por favor seleccione el dia realizar su consulta"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >

            <EditText
                android:id="@+id/txt_fecha_inicio_produc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="Selecione el dia"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"

                />

            <Button
            android:id="@+id/btn_productividad_dia"
            style="@style/letra_contenido_blanco"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/redondo_gris_botones"
            android:textColor="@color/negro"
            android:text="Consultar"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Terminales Diagnosticadas y Reparadas por DÃ­a"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"

            />


        <com.github.mikephil.charting.charts.BarChart

            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:id="@+id/grafica_dia"
            android:layout_width="320dp"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/borde_verde_azul"


            />





    </LinearLayout>






</ScrollView>