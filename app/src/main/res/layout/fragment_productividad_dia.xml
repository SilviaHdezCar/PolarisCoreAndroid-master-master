<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/letra_contenido"
            android:textSize="16dp"
            android:text="Seleccione el día"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >

            <EditText
                android:id="@+id/txt_fecha_inicio_produc"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:focusable="false"
                android:hint="dd-mm-aaaa"
                android:textSize="16dp"
                android:padding="2dp"
                android:maxLines="1"
                android:background="@drawable/redondo_fondo_blanco"
                android:layout_gravity="center_horizontal"

                />

            <Button
            android:id="@+id/btn_productividad_dia"
            style="@style/letra_contenido_blanco"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/redondo_gris_botones"
            android:textColor="@color/negro"
            android:text="Consultar"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/titulo_prod"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Terminales asociadas, diagnosticadas y reparadas por día"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"

            />


        <com.github.mikephil.charting.charts.BarChart

            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:id="@+id/grafica_dia"
            android:layout_width="280dp"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cuadrado_fondo_blanco"
            android:layout_marginBottom="20dp"


            />





    </LinearLayout>






</ScrollView>