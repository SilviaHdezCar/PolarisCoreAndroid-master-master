<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/letra_contenido"
            android:text="Bienvenido, por favor seleccione el rango de fechas para realizar su consulta"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >

            <EditText
                android:id="@+id/txt_fecha_inicio_produc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="Selecione el dia"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"

                />

        </LinearLayout>

             <Button
            android:id="@+id/btn_productividad_dia"
            style="@style/letra_contenido_blanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/redondo_botones"
            android:text="Consultar"
            android:textAllCaps="false"
            />


        <com.jjoe64.graphview.GraphView
            android:id="@+id/grafica_dia"
            android:layout_width="300dp"
            android:layout_height="300dp"
             android:layout_gravity="center_horizontal"
            android:visibility="invisible"

            />

        <LinearLayout
            android:id="@+id/linea_titulo_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="invisible"


            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:background="@color/rojo_borde"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Diagnosticadas"


                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/borde_verde"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Reparadas"


                />



        </LinearLayout>




    </LinearLayout>






</FrameLayout>