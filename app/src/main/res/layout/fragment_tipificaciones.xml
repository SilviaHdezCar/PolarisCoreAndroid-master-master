<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo"
    tools:context=".Actividades.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            style="@style/letra_titulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Tipificaciones dela termianal" />

        <TextView
            android:id="@+id/lbl_msj_tipificaciones"
            style="@style/letra_contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="msj" />

        <LinearLayout
            android:id="@+id/layout_tipificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_tipificaciones"
                    style="@style/letra_contenido"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/redondo_fondo_gris"
                    android:hint="Tipíficaciones"
                    android:inputType="text"
                    android:paddingLeft="5dp" />

                <Button
                    android:id="@+id/btn_agregarTipificaciones"
                    style="@style/letra_botones"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/redondo_azul"
                    android:text="Agregar"
                    android:textAllCaps="false" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/cuadrado_gris"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            >



            <TextView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                style="@style/letra_titulos"
                android:text="Tipificación"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:background="@drawable/borde_izq_sup_inf_gris"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                style="@style/letra_titulos"
                android:text="Eliminar"
                android:gravity="center"
                android:background="@drawable/borde_todos_gris"/>



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_tipificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="50dp">

                    <Button
                        android:id="@+id/btn_volver_Tipificaciones"
                        style="@style/letra_negrita"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/redondo_fondo_gris"
                        android:onClick="volverTipificaciones"
                        android:text="Atrás"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_siguiente_Tipificaciones"
                        style="@style/letra_botones"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/redondo_azul"
                        android:text="Siguiente"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>