<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".Actividades.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borde_inferior_gris">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borde_inferior_gris"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imagen_asociada"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_datafono" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/marca_ter_validaciones"
                            style="@style/letra_negrita_terminal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca"
                            android:textAllCaps="true" />

                        <TextView
                            style="@style/letra_negrita_terminal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=" - " />

                        <TextView
                            android:id="@+id/modelo_ter_validaciones"
                            style="@style/letra_negrita_terminal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Modelo"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/serial_ter_validaciones"
                            style="@style/letra_negrita_terminal_gris_grande"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="serial"
                            android:textAllCaps="true" />

                        <TextView
                            style="@style/letra_negrita_terminal_gris_grande"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - " />

                        <TextView
                            android:id="@+id/tecno_ter_validaciones"
                            style="@style/letra_negrita_terminal_gris_grande"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="TecnologÃ­a"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/estado_ter_validaciones"
                            style="@style/letra_negrita_terminal_gris_grande"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado"
                            android:textAllCaps="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/garantia_ter_validaciones"
                            style="@style/letra_negrita_terminal_gris_peq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin confirmar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fechal_ans_ter_validaciones"
                            style="@style/letra_negrita_terminal_gris_peq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="FechaAns" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_date"
                            android:tint="@color/gris_menu_letra" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

          <include layout="@layout/fragment_validaciones_seleccionar_autorizadas" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>