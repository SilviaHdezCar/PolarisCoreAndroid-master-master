<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.EtapasTerminalAutorizada">

    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*">


        <TableRow>

            <LinearLayout
                android:id="@+id/tab_asociada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_etapas"
                    style="@style/letra_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verde_pestanas"
                    android:scrollbars="vertical"
                    android:text="ETAPAS"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/selectAsociadas"
                    android:layout_height="4dp"
                    android:orientation="horizontal"
                    android:background="@color/blanca_linea"
                    >

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_autorizada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_validacion_terminales"
                    style="@style/letra_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/verde_pestanas"
                    android:scrollbars="vertical"
                    android:text="VALIDACIÓN" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/selectAutorizadas"
                    android:layout_height="4dp"
                    android:orientation="horizontal"
                    android:background="@color/verde_pestanas"
                    >

                </LinearLayout>
            </LinearLayout>





        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/layout_terminal_asociada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabla"
        android:layout_margin="10dp"
        android:background="@drawable/borde_rojo"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imagen_asociada"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_datafono"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:background="@drawable/borde_inferior_gris">

                <TextView
                    android:id="@+id/serial_ter_asociada"
                    style="@style/letra_negrita_terminal"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terminal"
                    />

                <TextView
                    style="@style/letra_negrita_terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" - " />

                <TextView
                    android:id="@+id/marca_ter_asociada"
                    style="@style/letra_negrita_terminal"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/modelo_ter_asociada"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - " />

                <TextView
                    android:id="@+id/tecno_ter_asociada"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="estado: "/>
                <TextView
                    android:id="@+id/estado_ter_asociada"
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:gravity="right"
                >

                <TextView
                    android:id="@+id/fechal_ter_asociada"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="fecha"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutTituloObservacion"
        android:padding="5dp"
        android:gravity="center"
        android:layout_below="@id/layout_terminal_asociada">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_observaciones_validacion"
        android:layout_below="@+id/layoutTituloObservacion"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_observaciones_validacion"
        android:id="@+id/layoutAddObservaciones"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tablaObservacion"
            android:layout_width="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*">


            <TableRow
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/textArea_information"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:lines="3"
                        android:hint="Anexar observación..."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:scrollHorizontally="false" />



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_agregar_etapa_autorizada"
                        style="@style/letra_contenido_blanco"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/redondo_botones"
                        android:text="Agregar"
                        android:layout_weight="0"
                        android:textAllCaps="false"
                        />
                </LinearLayout>


            </TableRow>

        </TableLayout>


    </LinearLayout>


</RelativeLayout>