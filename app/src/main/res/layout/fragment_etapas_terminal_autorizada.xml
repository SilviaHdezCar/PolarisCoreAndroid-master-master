<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Fragmentos.EtapasTerminalAutorizada">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tabla_encabezado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">


                    <TableRow>

                        <LinearLayout
                            android:id="@+id/tab_asociada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_etapas"
                                style="@style/letra_tabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/verde_pestanas"
                                android:scrollbars="vertical"
                                android:text="ETAPAS" />

                            <LinearLayout
                                android:id="@+id/selectAsociadas"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:background="@color/blanca_linea"
                                android:orientation="horizontal">

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tab_autorizada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_validacion_terminales"
                                style="@style/letra_tabs"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@color/verde_pestanas"
                                android:scrollbars="vertical"
                                android:text="VALIDACIÓN" />

                            <LinearLayout
                                android:id="@+id/selectAutorizadas"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:background="@color/verde_pestanas"
                                android:orientation="horizontal">

                            </LinearLayout>
                        </LinearLayout>


                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:id="@+id/layout_terminal_asociada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tabla"
                    android:layout_margin="10dp"
                    android:background="@drawable/borde_amarillo"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imagen_asociada_eta"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/borde_inferior_gris"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/serial_ter_asociada"
                                style="@style/letra_negrita_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terminal"
                                android:textAllCaps="true" />

                            <TextView
                                style="@style/letra_negrita_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text=" - " />

                            <TextView
                                android:id="@+id/marca_ter_asociada"
                                style="@style/letra_negrita_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/modelo_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true" />

                            <TextView
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - " />

                            <TextView
                                android:id="@+id/tecno_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/letra_negrita_terminal_gris_grande"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="estado: "
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/estado_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_grande"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_garantia"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fechal_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="fecha" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/cuadrado_fondo_verde"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Observaciones registradas"
                            android:textColor="@color/blanco"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/observation"
                                android:tint="@color/blanco" />
                        </LinearLayout>


                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_observaciones_validacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/cuadrado_fondo_verde"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/observation"
                            android:tint="@color/blanco" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Registrar observación"
                            android:textColor="@color/blanco"
                            android:textSize="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ly_contenedor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TableLayout
                            android:id="@+id/tablaObservacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/toolbar"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:shrinkColumns="*"
                            android:stretchColumns="*">


                            <TableRow android:gravity="center">

                                <LinearLayout
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <EditText
                                        android:id="@+id/textArea_information"
                                        style="@style/letra_contenido2"
                                        android:layout_width="match_parent"
                                        android:layout_height="80dp"
                                        android:background="@drawable/redondo_gris_fondo_gris"
                                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzñABCDEFGHIJKLMNOPQRSTUVWXYZÑ óáéíúÓÁÉÍÚ.,:;"
                                        android:gravity="top|left"
                                        android:hint="Ingresar observación"
                                        android:inputType="text|textCapCharacters"
                                        android:maxLength="300"
                                        android:maxLines="4"
                                        android:overScrollMode="always"
                                        android:padding="5dp"
                                        android:scrollbarStyle="insideInset"
                                        android:scrollbars="vertical"
                                        android:scrollHorizontally="false" />
                                </LinearLayout>


                            </TableRow>

                            <TableRow>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btn_agregar_etapa_autorizada"
                                        style="@style/letra_contenido_blanco"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/redondo_gris_botones"
                                        android:text="Agregar"
                                        android:textAllCaps="false"
                                        android:textColor="@color/negro" />
                                </LinearLayout>
                            </TableRow>

                            <TableRow>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <Button
                                        android:id="@+id/btn_siguiente_etapas_autorizadas"
                                        style="@style/letra_contenido_blanco"
                                        android:layout_width="120dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/redondo_gris_botones"
                                        android:text="Siguiente"
                                        android:textAllCaps="false"
                                        android:textColor="@color/negro" />
                                </LinearLayout>
                            </TableRow>

                        </TableLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</ScrollView>