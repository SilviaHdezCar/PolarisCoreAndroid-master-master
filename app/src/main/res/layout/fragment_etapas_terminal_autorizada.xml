<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Fragmentos.EtapasTerminalAutorizada">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ly_observacione_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@color/verde_pestanas"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/pest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_izq"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btn_atras_etapas"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:background="@color/transparente"
                            android:src="@drawable/ic_left"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_centro"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_point" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_point"
                            android:tint="#4DFFFFFF" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_point"
                            android:tint="#4DFFFFFF" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_point"
                            android:tint="#4DFFFFFF" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_der"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignEnd="@+id/pest"
                        android:layout_alignRight="@+id/pest">

                        <ImageButton
                            android:id="@+id/btn_siguiente_etapas_autorizadas"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:background="@color/transparente"
                            android:src="@drawable/ic_right" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_terminal_asociada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/borde_verde"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imagen_asociada_eta"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/borde_inferior_gris"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/serial_ter_asociada"
                                style="@style/letra_negrita_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terminal"
                                android:textAllCaps="true" />

                            <TextView
                                style="@style/letra_negrita_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text=" - " />

                            <TextView
                                android:id="@+id/marca_ter_asociada"
                                style="@style/letra_negrita_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/modelo_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true" />

                            <TextView
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - " />

                            <TextView
                                android:id="@+id/tecno_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/letra_negrita_terminal_gris_grande"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="estado: "
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/estado_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_grande"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_garantia"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fechal_ter_asociada"
                                style="@style/letra_negrita_terminal_gris_peq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="fecha" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/verde_general"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Observaciones registradas"
                            android:textColor="@color/blanco"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/observation"
                                android:tint="@color/blanco" />
                        </LinearLayout>


                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_observaciones_validacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp" />


                   <!-- <LinearLayout
                        android:id="@+id/ly_contenedor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_siguiente_nuevo_diagn"
                            style="@style/letra_contenido_blanco"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/redondo_gris_botones"
                            android:text="Siguiente"
                            android:textAllCaps="false"
                            android:textColor="@color/negro" />
                    </LinearLayout>-->
                </LinearLayout>

            </LinearLayout>

            <!--Ingresar observación-->
            <RelativeLayout
                android:id="@+id/contenedor_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="2dp"
                android:background="@drawable/borde_verde_general"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp">

                <EditText
                    android:id="@+id/textArea_information"
                    style="@style/letra_contenido2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/borde_derecho_verde"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzñABCDEFGHIJKLMNOPQRSTUVWXYZÑ óáéíúÓÁÉÍÚ.,:;"
                    android:hint="Ingresar observación"
                    android:inputType="text|textCapCharacters|textMultiLine"
                    android:maxLength="300"
                    android:padding="5dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false" />

                <ImageView
                    android:id="@+id/btn_agregar_etapa_autorizada"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/textArea_information"
                    android:layout_toRightOf="@id/textArea_information"
                    android:tint="@color/verde_general"
                    android:src="@drawable/ic_send" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>