<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/layout_etapas_ter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde_todos_verde"
        android:orientation="horizontal"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/etapas_imagen_usuario"
            layout_alignParentTop="true"
            layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/user_grey"
            app:civ_border_color="@color/blanco"
            app:civ_border_width="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/borde_inferior_gris"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/usuario_etapas"
                    style="@style/letra_negrita_terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHERNANDEZ4"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/etapas_serial_terminal"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="40dp"
                    android:text="serial" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obseravaciones" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/observaciones_etapas"
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fecha_etapas"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fecha"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_date"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/gris_menu_letra"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>