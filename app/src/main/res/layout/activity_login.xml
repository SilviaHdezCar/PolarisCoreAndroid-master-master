<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.Activity_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_fondo"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:orientation="vertical">

            <TextView
                style="@style/letra_contenido_blanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:gravity="left"
                android:text="Bienvenido"
                android:textSize="16dp" />

            <TextView
                style="@style/letra_contenido_blanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Ingrese usuario y contraseña."
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/redondo_fondo_verde_borde_verde"
            android:orientation="horizontal"
            android:padding="5dp">



            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:src="@mipmap/user_grey"
                android:tint="@color/gris_iconos" />

            <EditText
                android:id="@+id/txtCorreo"
                style="@style/letra_contenido"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blanco"
                android:gravity="center"
                android:hint="@string/correo"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/redondo_fondo_verde_borde_verde"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:src="@mipmap/key" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:orientation="horizontal"

                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/txtPass"
                    style="@style/letra_contenido"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:background="@color/blanco"
                    android:gravity="center"
                    android:hint="@string/clave"
                    android:inputType="textPassword" />

                <ImageButton
                    android:id="@+id/btn_mostrarClave"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/blanco"
                    android:onClick="mostrarClave"
                    android:src="@drawable/ic_ver"
                    android:tint="@color/verde_pestanas" />
            </LinearLayout>


        </LinearLayout>






        <Button
            android:id="@+id/btn_login"
            style="@style/letra_contenido"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/redondo_fondo_gris"
            android:onClick="iniciarSesion"
            android:text="@string/iniciarSes"
            android:textAllCaps="false"


            />





        <TextView
            android:id="@+id/txt_reestablecerClave"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ha olvidado la contraseña?"
            android:textColor="@color/blanco"

            />



        <ImageButton
            android:id="@+id/btn_huella"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/transparente"
            android:text="Iniciar sesión mediante huella digital"
            android:src="@mipmap/ic_huella"

            android:tint="@color/blanco"

            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión mediante huella digital"
            android:textColor="@color/blanco"
            android:textAlignment="center"
            />




    </LinearLayout>








</LinearLayout>