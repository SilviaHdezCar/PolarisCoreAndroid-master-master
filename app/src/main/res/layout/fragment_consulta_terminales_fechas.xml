<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:orientation="vertical"
    tools:context=".Fragmentos.ConsultaTerminalesFechas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/verde_pestanas">


            <Button
                android:id="@+id/btn_fech_consulta_serial"
                style="@style/letra_tabs"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/verde_pestanas"
                android:scrollbars="vertical"
                android:text="Serial"
                />


            <Button
                android:id="@+id/btn_fech_rango_fechas"
                style="@style/letra_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borde_inferior_blanco"
                android:scrollbars="vertical"
                android:text="Rango de fechas" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/redondo_botones_fondo_blanco"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"



                >

                <EditText
                    android:id="@+id/txt_fecha_inicio"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Fecha inicial"
                    android:textColor="#A1000000"
                    android:textAlignment="center"
                    android:maxLines="1"
                   android:background="@color/blanco"
                    android:padding="1dp"



                    />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/verde_general"

                    />


                </LinearLayout>


                <EditText
                    android:id="@+id/txt_fecha_fin"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Fecha final"
                    android:background="@color/blanco"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:textColor="#A1000000"
                   />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/verde_general"

                    />

                <ImageView
                    android:id="@+id/btn_buscar_terminalesPorFechas"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/search"
                    android:tint="@color/verde_general"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"

                    />


            </LinearLayout>



        </LinearLayout>


            <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_consultaTerminalesFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>


