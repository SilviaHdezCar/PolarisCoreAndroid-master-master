<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    tools:context=".Fragmentos.ConsultaTerminalesFechas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/verde_pestanas">


            <Button
                android:id="@+id/btn_fech_consulta_serial"
                style="@style/letra_tabs"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/verde_pestanas"
                android:scrollbars="vertical"
                android:text="Serial"
                />


            <Button
                android:id="@+id/btn_fech_rango_fechas"
                style="@style/letra_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borde_inferior_blanco"
                android:scrollbars="vertical"
                android:text="Rango de fechas" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/redondo_botones_fondo_blanco"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"


                >

                <EditText
                    android:id="@+id/txt_fecha_inicio"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:focusable="false"

                    android:hint="Fecha inicial"
                    android:textColor="@color/blanco"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:background="@color/gris_menu_letra"
                    android:padding="1dp"

                    />

                <EditText
                    android:id="@+id/txt_fecha_fin"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Fecha final"
                    android:background="@color/gris_menu_letra"
                    android:maxLines="1"
                    android:textColor="@color/blanco"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    android:id="@+id/btn_buscar_terminalesPorFechas"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/search"
                    android:tint="@color/blanco"
                    android:backgroundTint="@color/gris_menu_letra"
                    android:background="@color/gris_menu_letra"
                   />


            </LinearLayout>


        </LinearLayout>



            <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_consultaTerminalesFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>


</FrameLayout>