<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     tools:context=".Fragmentos.Productividad_mes"

    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="20dp"

       >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/letra_contenido"
          android:textSize="16dp"
          android:text="Seleccione el mes y año a consultar"


          />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="15dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="75dp"
               android:textColor="@color/negro"
               android:textSize="16dp"
               android:layout_gravity="center_vertical"
                 android:text="Mes" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="125dp"
               android:textColor="@color/negro"
               android:textSize="16dp"
               android:layout_gravity="center_vertical"
               android:text="Año" />



       </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginTop="10dp"
         >




      <Spinner
          android:id="@+id/spin_mesxmes"
          style="@layout/spinner_sytle"
          android:layout_width="140dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          >

      </Spinner>



      <Spinner
          android:id="@+id/spiner_añoxmes"
          android:layout_width="140dp"
          android:layout_marginLeft="10dp"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          style="@layout/spinner_sytle"

          >
      </Spinner>


       </LinearLayout>




       <Button
           android:id="@+id/produc_mes"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_marginTop="10dp"
           android:layout_gravity="center_horizontal"
           android:textAllCaps="false"
           android:textSize="16dp"
           android:text="Consultar"
           style="@style/letra_contenido_blanco"
           android:background="@drawable/redondo_gris_botones"
           android:textColor="@color/negro"

           />

       <TextView
           android:id="@+id/titulo_gr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Productividad de terminales diagnosticadas y reparadas por mes"
           android:layout_marginTop="20dp"
           android:textSize="14dp"
           android:textStyle="bold"
           android:visibility="invisible"

           />


       <com.github.mikephil.charting.charts.BarChart

           android:layout_height="350dp"
           android:layout_marginTop="10dp"
           android:id="@+id/grafica_mes"
           android:layout_width="280dp"
           android:visibility="gone"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/cuadrado_fondo_blanco"
           android:layout_marginBottom="20dp"

           />


   </LinearLayout>




</ScrollView>