<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     tools:context=".Fragmentos.Productividad_mes"
    android:padding="10dp"

    >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"

       >


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/letra_contenido"
          android:text="Seleccione el mes y año a consultar"


          />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginTop="20dp"


      >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:textColor="@color/negro"
          android:layout_gravity="center_vertical"
          android:text="Mes" />


    <Spinner
        android:id="@+id/spin_mesxmes"
        android:layout_width="150dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:entries="@array/meses"
        style="@layout/spinner_sytle"

        >
        </Spinner>


       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginTop="20dp"


           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:textColor="@color/negro"
               android:layout_gravity="center_vertical"
               android:text="Año" />


           <Spinner
               android:id="@+id/spiner_añoxmes"
               android:layout_width="150dp"
               android:layout_marginLeft="10dp"
               android:layout_height="wrap_content"
               android:textAlignment="gravity"
                style="@layout/spinner_sytle"

               >
           </Spinner>


       </LinearLayout>


       <Button
           android:id="@+id/produc_mes"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_marginTop="20dp"
           android:layout_gravity="center_horizontal"
           android:textAllCaps="false"
           android:text="Consultar"
           style="@style/letra_contenido_blanco"
           android:background="@drawable/redondo_gris_botones"
           android:textColor="@color/negro"

           />

       <TextView
           android:id="@+id/titulo_gr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Productividad de terminales diagnosticadas y reparadas por mes"
           android:layout_marginTop="20dp"
           android:textSize="14dp"
           android:textStyle="bold"
           android:visibility="invisible"

           />


       <com.github.mikephil.charting.charts.BarChart

           android:layout_height="350dp"
           android:layout_marginTop="20dp"
           android:id="@+id/grafica_mes"
           android:layout_width="280dp"
           android:visibility="gone"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/cuadrado_fondo_blanco"
           android:layout_marginBottom="20dp"

           />




   </LinearLayout>







</ScrollView>