<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.RepuestosAutorizadasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/panel_encabezado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/gris_fondo"
                >
                <TextView
                    style="@style/letra_negrita"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Repuestos"
                    android:textAllCaps="true"
                    />
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <TextView
                    style="@style/letra_negrita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ok"
                    android:textAllCaps="true"/>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_repuestos_autorizadas"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_above="@id/btn_siguiente_validaciones" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_siguiente_repuestos_autorizadas"
            style="@style/letra_contenido_blanco"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/redondo_botones"
            android:text="Siguiente"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>