<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_fondo"
    tools:context=".Actividades.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etapas"
            style="@style/letra_titulos"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/serial_ter_seleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            style="@style/letra_contenido"
            android:padding="5dp"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_etapas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_volver_etapas"
                style="@style/letra_negrita"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/redondo_fondo_gris"
                android:onClick="volverEtapas"
                android:text="AtrÃ¡s"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_siguiente_etapas"
                style="@style/letra_botones"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/redondo_azul"
                android:onClick="siguienteEtapas"
                android:text="Siguiente"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>