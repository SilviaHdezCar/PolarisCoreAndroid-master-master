<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".Fragmentos.RepuestoDefectuosoAutorizadas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/panel_encabezado" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Seleccione el repuesto defectuoso"
            android:gravity="center"
            style="@style/letra_contenido"
            android:textColor="@color/negro"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tabla_seleccionar_repuestos_defectuosos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:stretchColumns="2">

                <TableRow
                    android:background="@drawable/cuadrado_fondo_verde">

                    <TextView
                        style="@style/letra_negrita"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:text="Repuestos"
                        android:textColor="@color/blanco"
                        android:textAllCaps="true" />

                    <TextView
                        style="@style/letra_negrita"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="ok"
                        android:textColor="@color/blanco"
                        android:textAllCaps="true" />


                </TableRow>

            </TableLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/cuadrado_fondo_verde"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/observation"
                android:tint="@color/blanco"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observaciones"
                android:textColor="@color/blanco"
                android:textSize="16dp"
                android:layout_marginLeft="4dp"
                android:padding="2dp"
                />

        </LinearLayout>


        <EditText
            android:id="@+id/txt_observacion_repuesto"
            style="@style/letra_contenido2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/redondo_gris_fondo_gris"
            android:gravity="top|left"
            android:hint="Ingresar observaciÃ³n"
            android:inputType="textMultiLine|textCapCharacters"
            android:maxLength="300"
            android:padding="5dp" />

        <Button
            android:id="@+id/btn_siguiente_repuestos_defectuoso_autorizadas"
            style="@style/letra_contenido_blanco"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/redondo_gris_botones"
            android:textColor="@color/negro"
            android:text="Solicitar"
            android:layout_marginTop="20dp"
            android:textAllCaps="false" />



    </LinearLayout>
</FrameLayout>