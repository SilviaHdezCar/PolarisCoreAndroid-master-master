<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdatePassword"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <include
            android:id="@+id/txt_preg2"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cambiar_pass"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textColor="@color/blanco"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preg"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:gravity="left"


            />


        <EditText
            android:id="@+id/txtClave1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:hint="Digite su nueva contraseña"
            android:inputType="textPassword"
            android:textSize="14dp"
             />

        <EditText
            android:id="@+id/txtClave2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="10dp"
            android:hint="Confirme su contraseña"
            android:inputType="textPassword"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/cambio_clave"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="720dp"
            android:background="@drawable/redondo_azul"
            android:gravity="center_horizontal"
            android:onClick="validaClave"
            android:text="@string/cambiar_clave"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:visibility="invisible" />


    </RelativeLayout>


</RelativeLayout>