<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UpdatePassword">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        >
        <include
            android:id="@+id/txt_preg2"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cambiar_pass"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textColor="@color/blanco"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preg"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp"


            />


        <Spinner
            android:id="@+id/spinner_pre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:entries="@array/preguntas"
            android:textSize="14dp"
            >

        </Spinner>


        <EditText
            android:id="@+id/txt_resp1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="10dp"
            android:hint= "@string/Respuesta1"
            android:inputType="text"
            android:textSize="14dp" />

        <Spinner
            android:id="@+id/spinner_pre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="270dp"
            android:layout_marginRight="10dp"
            android:entries="@array/preguntas"
            android:textSize="14dp"
            >

        </Spinner>


        <EditText
            android:id="@+id/txt_resp2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="10sp"
            android:hint= "@string/Respuesta2"
            android:inputType="text"
            android:textSize="14dp" />

        <Spinner
            android:id="@+id/spinner_pre3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="390dp"
            android:layout_marginRight="10dp"
            android:entries="@array/preguntas">
            android:textSize="14dp"

        </Spinner>


        <EditText
            android:id="@+id/txt_resp3"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="410dp"
            android:layout_marginRight="10dp"
            android:inputType="text"
            android:hint= "@string/Respuesta3"/>


        <Button
            android:id="@+id/btn_valida"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/redondo_azul"
            android:onClick="validaRta"
            android:text="@string/validar_rta"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/txtClave1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="590dp"
            android:layout_marginRight="10dp"
            android:hint="Digite su nueva contraseña"
            android:inputType="textPassword"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/txtClave2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="650dp"
            android:layout_marginRight="10dp"
            android:hint="Confirme contraseña"
            android:inputType="textPassword"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cambio_clave"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="720dp"
            android:background="@drawable/redondo_azul"
            android:gravity="center_horizontal"
            android:onClick="validaClave"
            android:text="@string/cambiar_clave"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:visibility="invisible" />


    </RelativeLayout>


</ScrollView>