<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".Fragmentos.ValidacionTerminalesFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <RelativeLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/verde_pestanas"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/pest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_izq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btn_atras_etapas"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparente"
                        android:src="@drawable/ic_left"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_centro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_point"
                        android:tint="#4DFFFFFF"

                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_point"
                         />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_point"
                        android:tint="#4DFFFFFF" />




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_der"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/pest"
                    android:layout_alignRight="@+id/pest">

                    <ImageButton
                        android:id="@+id/btn_siguiente_validaciones_autorizadas"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparente"
                        android:src="@drawable/ic_right" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">



                <TextView
                    android:id="@+id/tituloSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERIAL: " />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_encabezado_vali"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/borde_verde_edit_text"
                android:orientation="horizontal">

                <TextView
                    style="@style/letra_titulos"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/blanco"
                    android:text="ValidaciÃ³n" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_botones"

                    >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/letra_titulos"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/blanco"
                        android:text="Ok" />
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gris_botones"

                        >
                    </LinearLayout>


                    <TextView
                        style="@style/letra_titulos"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/blanco"
                        android:text="Falla" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gris_botones"

                        >
                    </LinearLayout>

                    <TextView
                        style="@style/letra_titulos"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/blanco"
                        android:text="Na" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_validaciones_autorizadas"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btn_siguiente_validaciones_autorizadas" />



            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>