<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layout_validaciones"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/borde_inferior_gris"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_validaciones"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"/>


            <RadioGroup
                android:id="@+id/radios_validaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bton_ok"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/bton_falla"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/bton_NA"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"/>
            </RadioGroup>

        </LinearLayout>
</RelativeLayout>