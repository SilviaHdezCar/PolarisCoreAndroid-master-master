<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragmentos.Registro_diagnostico">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@drawable/button_border"
        android:orientation="vertical"
        tools:context=".Fragmentos.Registro_diagnostico"
        tools:ignore="ExtraText">

        <LinearLayout
            android:id="@+id/panel_repuestos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >

                <TextView
                    style="@style/letra_titulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccione el repuesto "
                    android:textSize="14dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/redondo_fondo_blanco"
                android:layout_marginLeft="5dp"
               android:padding="2dp">

                <Spinner
                    android:id="@+id/auto_repuesto"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                >

                <EditText
                    android:id="@+id/txt_cantReq"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/redondo_fondo_blanco"
                    android:hint="Cantidad"
                    android:padding="5dp"
                    android:inputType="number"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/bton_agregarRepuesto"
                    style="@style/letra_botones"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:background="@drawable/redondo_gris_botones"
                    android:text="Agregar"
                    android:textAllCaps="false"

                    android:textColor="@color/negro"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/verde_general"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView

                    style="@style/letra_titulos"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Código"
                    android:textColor="@color/blanco"
                    android:textSize="14dp"

                    />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_botones"

                    >


                </LinearLayout>

                <TextView
                    style="@style/letra_titulos"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Nombre"
                    android:textColor="@color/blanco"
                    android:textSize="14dp"

                    />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_botones"

                    >

                </LinearLayout>


                <TextView
                    style="@style/letra_titulos"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Cantidad"
                    android:textColor="@color/blanco"
                    android:textSize="14dp"


                    />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gris_botones"

                    >

                </LinearLayout>


                <TextView
                    style="@style/letra_titulos"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Eliminar"
                    android:textColor="@color/blanco"
                    android:textSize="14dp" />


            </LinearLayout>
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_repuestos_diag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/button_border" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@color/verde_general"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/observation"
                android:tint="@color/blanco" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Registrar observación"
                android:textColor="@color/blanco"
                android:textSize="16dp" />

        </LinearLayout>


        <EditText
            android:id="@+id/txt_observaciones"
            style="@style/letra_contenido2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redondo_fondo_blanco"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzñABCDEFGHIJKLMNOPQRSTUVWXYZÑ óáéíúÓÁÉÍÚ.,:;"
            android:gravity="top|left"
            android:hint="Observación"
            android:inputType="textMultiLine|textCapCharacters"
            android:maxLength="300"
            android:maxLines="4"
            android:overScrollMode="always"
            android:padding="5dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />

        <Button
            android:id="@+id/btn_registroDioagnostico"
            style="@style/letra_botones"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/redondo_gris_botones"
            android:text="Finalizar"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/negro"


            />


    </LinearLayout>

</ScrollView>