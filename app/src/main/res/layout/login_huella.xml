<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/panel_huella"
    android:gravity="center"
    android:background="@color/blanco"
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:layout_gravity="center">


    <ImageView
        android:id="@+id/imagen_huella"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_huella"
        android:tint="@color/verde_pestanas"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesiÃ³n mediante huella digital"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"

        />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/img_iniciohuella"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presiona suavemente el sensor para verificar la huella"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/cancelar_login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Cancelar"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/redondo_gris_botones"
        android:textColor="@color/borde_negro_botones"
        android:textAllCaps="false"
        android:padding="8dp"
        android:textSize="16dp"

        />



    </LinearLayout>




</LinearLayout>