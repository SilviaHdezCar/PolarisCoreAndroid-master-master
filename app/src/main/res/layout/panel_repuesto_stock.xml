<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
 >



    <LinearLayout
        android:id="@+id/cargar_repuestos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:padding="10dp"



        >

        <ImageView
            android:id="@+id/imagen_asociada"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_datafono"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"

                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/txt_nombre_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"

                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/txt_codigo_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                   android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:orientation="horizontal"
                android:layout_gravity="left"
                >


                <TextView
                    android:id="@+id/txt_cantidad_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:textAllCaps="false"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                >

                <TextView
                    android:id="@+id/txt_estado_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:textAllCaps="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</RelativeLayout>