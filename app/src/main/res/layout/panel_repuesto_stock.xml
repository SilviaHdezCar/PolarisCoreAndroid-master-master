<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cargar_repuestos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"



        >

        <ImageView
            android:id="@+id/imagen_asociada"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_datafono"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                >

                <TextView

                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre "
                    android:textStyle="bold"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/txt_nombre_repuesto_stock"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView

                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CÃ³digo "
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/txt_codigo_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:text="Cantidad "
                    android:textSize="12dp"

                    />


                <TextView
                    android:id="@+id/txt_cantidad_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    />


                <TextView
                    android:id="@+id/tecno_ter_asociada"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="12dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado "
                    android:textSize="12dp"



                    />
                <TextView
                    android:id="@+id/txt_estado_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_grande"
                    android:textAllCaps="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</RelativeLayout>