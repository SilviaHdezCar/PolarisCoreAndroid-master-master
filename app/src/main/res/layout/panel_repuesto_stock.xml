<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/cargar_repuestos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/borde_inferior_gris"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_codigo_repuesto_stock"
                style="@style/letra_negrita_terminal_gris_peq"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                />


                 <TextView
                    android:id="@+id/txt_nombre_repuesto_stock"
                    style="@style/letra_negrita_terminal_gris_peq"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blanco"

                />


            <TextView
                android:id="@+id/txt_cantidad_repuesto_stock"
                style="@style/letra_negrita_terminal_gris_peq"
                android:textAllCaps="false"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blanco"

                />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_estado_repuesto_stock"
                style="@style/letra_negrita_terminal_gris_grande"
                android:textAllCaps="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                />



        </LinearLayout>

    </LinearLayout>



</RelativeLayout>