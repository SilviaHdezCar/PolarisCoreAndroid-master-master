<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.Reestablecer_password"
    android:background="@drawable/fondo_base_actualizar"
    android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REESTABLECER CONTRASEÑA"
        android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:textColor="@color/blanco"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/redondo_botones_fondo_blanco"
            android:hint="Código de usuario"

            />

        <Button
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:text="Buscar"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:background="@drawable/redondo_fondo_gris"

            />









    </LinearLayout>




</LinearLayout>