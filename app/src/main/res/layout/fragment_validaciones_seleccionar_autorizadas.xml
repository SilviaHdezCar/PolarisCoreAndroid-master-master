<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.ValidacionesSeleccionarAutorizadas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@color/verde_pestanas">

                <LinearLayout
                    android:id="@+id/pest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_izq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btn_atras"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparente"
                        android:src="@drawable/ic_left"
                       />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_centro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_point"
                        android:tint="#4DFFFFFF"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_point"
                        android:layout_marginLeft="10dp"
                        android:tint="#4DFFFFFF"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_point"
                        android:layout_marginLeft="10dp"
                        android:tint="#4DFFFFFF"

                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_point"
                        android:layout_marginLeft="10dp"

                        />


                </LinearLayout>




            </RelativeLayout>



            <TextView
                android:id="@+id/tile_validaciones"
                style="@style/letra_titulos"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Validaciones de terminales en reparaciÃ³n" />


                <LinearLayout
                    android:id="@+id/layout_encabezado_vali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutSerial"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">


                    <TableLayout
                        android:id="@+id/tabla_validaciones_autorizadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="0">

                        <TableRow android:background="@drawable/cuadrado_fondo_verde"
                            >

                            <TextView
                                style="@style/letra_titulos"
                                android:layout_width="170dp"
                                android:layout_height="30dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:textColor="@color/blanco"
                                android:background="@drawable/cuadrado_fondo_verde"
                                android:text="Nombre                             " />

                            <TextView
                                style="@style/letra_titulos"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:paddingLeft="4dp"
                                android:text="Ok    Falla    Na"
                                android:textColor="@color/blanco"
                                />


                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            <Button
                android:id="@+id/btn_siguiente_seleccionar_validaciones_autorizadas"
                style="@style/letra_contenido_blanco"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/recycler_view_validaciones"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/redondo_gris_botones"
                android:text="Finalizar"
                android:textAllCaps="false"
                android:textColor="@color/negro"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>