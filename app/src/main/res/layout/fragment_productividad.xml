<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.MainActivity">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        style="@style/letra_contenido"
        android:text="Bienvenido, por favor seleccione el rango de fechas para realizar su consulta"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

        <EditText
            android:id="@+id/txt_fecha_inicio_prod"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha inicial"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:layout_gravity="center_horizontal"

            />

        <EditText
            android:id="@+id/txt_fecha_fin_prod"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"

            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha fin"
            android:inputType="date"
            android:maxLines="1"
            android:paddingLeft="5dp" />

          </LinearLayout>

    <Button
        android:id="@+id/btn_productividad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:textAllCaps="false"
    android:text="Consultar"
    style="@style/letra_contenido_blanco"
    android:background="@drawable/redondo_botones"


    />


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/titulo_y"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="T e r m i n a l e s  x  d i a"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            />




    <com.github.mikephil.charting.charts.BarChart



        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:id="@+id/grafica_productividad"
        android:layout_gravity="center"
        android:visibility="invisible"



        />

    </LinearLayout>

    <TextView
        android:id="@+id/titulo_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dias"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="invisible"

        />




</LinearLayout>