<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     tools:context=".Actividades.MainActivity"
    >


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/letra_contenido"
    android:textSize="16dp"
    android:text="Seleccione el criterio de bÃºsqueda para ver su productividad."
    android:layout_margin="20dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"

        >

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:background="@drawable/redondo_fondo_blanco"
            android:padding="2dp"
            >

            <Spinner
                android:layout_width="120dp"
                android:id="@+id/tipo_consulta"
                android:layout_height="30dp"
                android:entries="@array/tipo_busqueda"
                android:textAlignment="center"
                android:layout_marginLeft="3dp"
                    > </Spinner>

        </RelativeLayout>




    <Button
            android:id="@+id/btn_busqueda"
            style="@style/letra_contenido_blanco"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/redondo_gris_botones"
            android:textColor="@color/negro"
            android:text="Buscar"
              android:textSize="16dp"
        android:layout_marginLeft="20dp"
            android:textAllCaps="false"


            />
    </LinearLayout>

</LinearLayout>