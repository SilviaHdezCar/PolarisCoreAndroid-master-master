<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Actividades.MainActivity"
    >


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/letra_contenido"
    android:text="@string/bienvenido_seleccione_el_criterio_de_busqueda_en_que_desea_ver_su_productividad"
    />

    <Spinner
        android:layout_width="150dp"
        android:id="@+id/tipo_consulta"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:entries="@array/tipo_busqueda"

        > </Spinner>


    <Button
            android:id="@+id/btn_busqueda"
            style="@style/letra_contenido_blanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/redondo_gris_botones"
            android:textColor="@color/negro"
            android:text="Buscar"
            android:textAllCaps="false"


            />


</LinearLayout>